<!DOCTYPE html>
<html>
<head>
  <title>AuthApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
<%= flash[:errors] if flash[:errors] %>  <!-- so any error from any page can be displayed -->
<% if current_user %>
  <%= link_to 'Logout', logout_path %>
<% end %>
<%= yield %>

</body>
</html>
